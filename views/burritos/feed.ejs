<%- layout('../views/layouts/boilerplate.ejs') %>

<h1 class="mx-auto py-3">FEED ME BURRITOS</h1>

<% for(let burrito of burritoList) { %>
    <div class="row">
        <div class="col-sm-4 mx-auto px-4">
            <div class="card mb-3">
                <div class="card-title">
                    <a href="/burritos/<%= burrito._id %>"><%= burrito.title %></a>
                </div>
                <div>
                    <span class="card-subtitle"><%= moment(burrito.createdAt).format('MMMM Do YYYY, h:mm:ss a') %></span>
                </div>
                <img id="card-burrito-pic" src="http://ramonstacoshop.com/wp-content/uploads/2017/11/california-burrito-slider.jpg" class="card-img-top" alt="A picture of a burrito">
                <div>
                    <%= burrito.restaurant %>, <span class="text-muted"><%= burrito.location %></span>
                </div>
                <div>
                    $<%= burrito.price %>
                </div>
            </div>
        </div>
    </div> 

<% } %> 