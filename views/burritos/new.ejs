<%- layout('../views/layouts/boilerplate.ejs') %>

<h1>Post a New Burrito, thy taste be judged!</h1>

<form action="/burritos" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="burrito[title]" required>
    </div>
    
    <!--
    <div>
        <label for="title">Picture</label>
        <input type="file" id="picture" name="burrito[picture]" accept="image/*;capture=camera">
    </div>
    -->
    
    <div>
        <label for="restaurant">Restaurant</label>
        <input type="text" id="restaurant" name="burrito[restaurant]" required>
    </div>

    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="burrito[location]" required>
    </div>

    <div>
        <label for="price">Price</label>
        $<input type="text" id="price" name="burrito[price]" required>
    </div>

    <div>
        <label for="description">Description</label>
        <textarea type="text" id="description" name="burrito[description]" required rows="4" cols="40"></textarea>
    </div>

    <div>
        <button>TELL ME BOUT IT</button>
    </div>
</form>